<div class="container" style="width: 50%;">
<div style="padding: 40px;border: 2px solid black;">
  <h2 style="padding-left: 30%;">Sign Up</h2>
  <div style="width: 80%;
    padding-left: 10%;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control", required: true  %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",  class: "form-control", required: true  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control", required: true  %>
    </div>

    <div class="actions"  style="padding-top: 4%;padding-bottom: 1%;padding-left: 20%;width:80%;">
      <%= f.submit "Sign up", class: "form-control text-center btn btn-primary" %>
    </div>
  <% end %>
</div>
  <div style="padding-left: 10%;">
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>
